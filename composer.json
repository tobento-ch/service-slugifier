{
    "name": "tobento/service-slugifier",
    "type": "library",
    "description": "The slugifier service provides interfaces to convert a string into a slug.",
    "keywords": [
        "tobento",
        "package",
        "slug",
        "slugifier"
	],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0"
    },  
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Tobento\\Service\\Slugifier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\Service\\Slugifier\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}